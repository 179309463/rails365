.row
  .col-md-4
    .panel.panel-default
      .panel-heading
        = @user.username
      .panel-body
        p 第#{@user.id}位会员
        p #{I18n.l @user.created_at, :format => :long}
        - if current_user && current_user == @user
          p
            = link_to "修改个人信息", edit_user_registration_path
  .col-md-8
    div
      ul.nav.nav-tabs role="tablist"
        li.active role="presentation"
          a aria-controls="profile" data-toggle="tab" href="#profile" role="tab"  个人信息
      .tab-content
        #profile.tab-pane.active role="tabpanel"
          table.table.table-bordered
            tr
              td
                | email: #{@user.email}
            - if @user.last_sign_in_at.present?
              tr
                td
                  | 最后登录时间: #{I18n.l @user.last_sign_in_at, :format => :long}
